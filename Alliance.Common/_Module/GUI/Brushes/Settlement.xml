<Brushes>

  <Brush Name="Settlement.RightPanel">
    <Layers>
      <BrushLayer Name="Default" Sprite="SPGeneral\MapOverlay\Settlement\settlement_parties_characters_header" ExtendLeft="11" ExtendBottom="11"/>
    </Layers>
    <Styles>
      <Style Name="Default">
        <BrushLayer Name="Default" />
      </Style>
    </Styles>
  </Brush>

  <Brush Name="Settlement.LeftPanel">
    <Layers>
      <BrushLayer Name="Default" Sprite="SPGeneral\MapOverlay\Settlement\settlement_info_header" />
    </Layers>
    <Styles>
      <Style Name="Default">
        <BrushLayer Name="Default" />
      </Style>
    </Styles>
  </Brush>
  
  <Brush Name="SettlementTabControlBrush">
    <Layers>
      <BrushLayer Name="Character" Sprite="SPGeneral\MapOverlay\Settlement\marble_top" IsHidden="true" />
      <BrushLayer Name="Army" Sprite="SPGeneral\MapOverlay\Settlement\marble_bot" IsHidden="true" />
    </Layers>
    <Styles>
      <Style Name="Character">
        <BrushLayer Name="Character" IsHidden="false" />
      </Style>
      <Style Name="Army">
        <BrushLayer Name="Army" IsHidden="false" />
      </Style>
    </Styles>
  </Brush>

  <Brush Name="SettlementAddCompanionButton">
    <Layers>
      <BrushLayer Name="Default" Sprite="SPGeneral\MapOverlay\Settlement\plus_button" Color="#FFFFFFFF" />
    </Layers>
    <Styles>
      <Style Name="Default" FontColor="#FAF4DEFF" TextOutlineColor="#FAF4DEFF">
        <BrushLayer Name="Default" ColorFactor="1.0" />
      </Style>
      <Style Name="Hovered">
        <BrushLayer Name="Default" ColorFactor="1.5" />
      </Style>
      <Style Name="Pressed">
        <BrushLayer Name="Default" ColorFactor="0.85" />
      </Style>
      <Style Name="Disabled" FontColor="#FAF4DE77" TextOutlineColor="#FAF4DE55">
        <BrushLayer Name="Default" ColorFactor="0.2" />
      </Style>
      <Style Name="Selected" FontColor="#0099FFFF" TextOutlineColor="#FAF4DE55">
        <BrushLayer Name="Default" ColorFactor="2.0" Color="#0099FFFF" />
      </Style>
    </Styles>
  </Brush>

  <Brush Name="CharacterListButtonToggleBrush">
    <Layers>
      <BrushLayer Name="Default" Sprite="SPGeneral\MapOverlay\Settlement\notable_toggle" IsHidden="true" />
      <BrushLayer Name="Pressed" Sprite="SPGeneral\MapOverlay\Settlement\notable_toggle_pressed" IsHidden="true" />
    </Layers>
    <Styles>
      <Style Name="Default">
        <BrushLayer Name="Default" IsHidden="false" />
      </Style>
      <Style Name="Hovered">
        <BrushLayer Name="Default" ColorFactor="1.3" IsHidden="false" />
      </Style>
      <Style Name="Pressed">
        <BrushLayer Name="Pressed" ColorFactor="0.5" IsHidden="false" />
      </Style>
      <Style Name="Disabled">
        <BrushLayer Name="Default" ColorFactor="0.1" IsHidden="false" />
      </Style>
      <Style Name="Selected">
        <BrushLayer Name="Default" ColorFactor="1.5" ValueFactor="10" HueFactor="-10" SaturationFactor="20" IsHidden="false" />
      </Style>
    </Styles>
    <SoundProperties>
      <StateSounds>
      </StateSounds>
      <EventSounds>
        <EventSound EventName="Click" Audio="tab" />
      </EventSounds>
    </SoundProperties>
  </Brush>

  <Brush Name="PartyListButtonToggleBrush">
    <Layers>
      <BrushLayer Name="Default" Sprite="SPGeneral\MapOverlay\Settlement\garrison_toggle" IsHidden="true" />
      <BrushLayer Name="Pressed" Sprite="SPGeneral\MapOverlay\Settlement\garrison_toggle_pressed" IsHidden="true" />
    </Layers>
    <Styles>
      <Style Name="Default">
        <BrushLayer Name="Default" IsHidden="false" />
      </Style>
      <Style Name="Hovered">
        <BrushLayer Name="Default" ColorFactor="1.3" IsHidden="false" />
      </Style>
      <Style Name="Pressed">
        <BrushLayer Name="Pressed" ColorFactor="0.5" IsHidden="false" />
      </Style>
      <Style Name="Disabled">
        <BrushLayer Name="Default" ColorFactor="0.1" IsHidden="false" />
      </Style>
      <Style Name="Selected">
        <BrushLayer Name="Default" ColorFactor="1.5" ValueFactor="10" HueFactor="-10" SaturationFactor="20" IsHidden="false" />
      </Style>
    </Styles>
    <SoundProperties>
      <StateSounds>
      </StateSounds>
      <EventSounds>
        <EventSound EventName="Click" Audio="tab" />
      </EventSounds>
    </SoundProperties>
  </Brush>

  <Brush Name="Settlement.Character.Background">
    <Layers>
      <BrushLayer Name="Default" Sprite="SPGeneral\MapOverlay\army_bar_portrait_slot" Color="#FF00FFFF"/>
    </Layers>
    <Styles>
      <Style Name="Default">
        <BrushLayer Name="Default" />
      </Style>
    </Styles>
  </Brush>

  <Brush Name="SettlementWallsIconBrush">
    <Layers>
      <BrushLayer Name="1" Sprite="SPGeneral\MapOverlay\Settlement\icon_walls_lvl1" IsHidden="true" />
      <BrushLayer Name="2" Sprite="SPGeneral\MapOverlay\Settlement\icon_walls_lvl2" IsHidden="true" />
      <BrushLayer Name="3" Sprite="SPGeneral\MapOverlay\Settlement\icon_walls_lvl3" IsHidden="true" />
    </Layers>
    <Styles>
      <Style Name="1">
        <BrushLayer Name="1" IsHidden="false" />
      </Style>
      <Style Name="2">
        <BrushLayer Name="2" IsHidden="false" />
      </Style>
      <Style Name="3">
        <BrushLayer Name="3" IsHidden="false" />
      </Style>
    </Styles>
  </Brush>

  <Brush Name="SettlementOverlay.PartyList.Button">
    <Layers>
      <BrushLayer Name="Default" Sprite="SPGeneral\MapOverlay\Settlement\parties_characters_group_background" Color="#C67000FF"/>
    </Layers>
    <Styles>
      <Style Name="Default">
        <BrushLayer Name="Default" ColorFactor="1"/>
      </Style>
      <Style Name="Hovered">
        <BrushLayer Name="Default" ColorFactor="1.3" />
      </Style>
      <Style Name="Pressed">
        <BrushLayer Name="Default" ColorFactor="0.8" />
      </Style>
      <Style Name="Disabled">
        <BrushLayer Name="Default" ColorFactor="0.1" />
      </Style>
      <Style Name="Selected">
        <BrushLayer Name="Default" ColorFactor="1.3" />
      </Style>
    </Styles>
  </Brush>

  <Brush Name="SettlementOverlay.CharacterList.Button">
    <Layers>
      <BrushLayer Name="Default" Sprite="SPGeneral\MapOverlay\Settlement\parties_characters_group_background" Color="#A9A100FF"/>
    </Layers>
    <Styles>
      <Style Name="Default">
        <BrushLayer Name="Default"  ColorFactor="1"/>
      </Style>
      <Style Name="Hovered">
        <BrushLayer Name="Default" ColorFactor="1.3" />
      </Style>
      <Style Name="Pressed">
        <BrushLayer Name="Default" ColorFactor="0.8" />
      </Style>
      <Style Name="Disabled">
        <BrushLayer Name="Default" ColorFactor="0.1" />
      </Style>
      <Style Name="Selected">
        <BrushLayer Name="Default" ColorFactor="1.3" />
      </Style>
    </Styles>
  </Brush>

  <Brush Name="Settlement.Property.PositiveChange.Text" Font="FiraSansExtraCondensed-Regular" TextHorizontalAlignment="Right">
    <Styles>
      <Style Name="Default" FontColor="#A7DF50FF" TextBlur="0" TextGlowColor="#000000FF" TextGlowRadius="0" TextOutlineAmount="0" TextOutlineColor="#000000FF" FontSize="15" />
    </Styles>
  </Brush>

  <Brush Name="Settlement.Property.NegativeChange.Text" Font="FiraSansExtraCondensed-Regular" TextHorizontalAlignment="Right">
    <Styles>
      <Style Name="Default" FontColor="#DE7045FF" TextBlur="0" TextGlowColor="#000000FF" TextGlowRadius="0" TextOutlineAmount="0" TextOutlineColor="#000000FF" FontSize="15" />
    </Styles>
  </Brush>

  <Brush Name="SettlementValuesTextBrush" Font="FiraSansExtraCondensed-Regular" TextHorizontalAlignment="Center">
    <Styles>
      <Style Name="Default" FontColor="#E4E4E4FF" TextGlowColor="#000000FF" TextOutlineColor="#FFFFFF00" TextOutlineAmount="0" TextGlowRadius="0" TextBlur="0" FontSize="18" />
      <Style Name="Warning" AnimationToPlayOnBegin="WarningAnim" />
    </Styles>
    <Animations>
      <Animation Name="WarningAnim" Duration="1" Loop="true">
        <AnimationProperty PropertyName="FontColor">
          <KeyFrame Time="0.0" Value="#E4E4E4FF" />
          <KeyFrame Time="0.01" Value="#F44242FF" />
        </AnimationProperty>
        <AnimationProperty PropertyName="TextBlur">
          <KeyFrame Time="0.0" Value="0" />
          <KeyFrame Time="0.01" Value="1" />
        </AnimationProperty>
        <AnimationProperty PropertyName="TextGlowRadius">
          <KeyFrame Time="0.0" Value="0" />
          <KeyFrame Time="0.01" Value="0.5" />
        </AnimationProperty>
      </Animation>
    </Animations>
  </Brush>

</Brushes>