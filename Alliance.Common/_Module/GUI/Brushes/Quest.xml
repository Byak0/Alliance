  <Brush Name="Quest.Background">
    <Layers>
      <BrushLayer Name="Default" Sprite="Quest\background_quest" AlphaFactor="0.6" />
    </Layers>
    <Styles>
      <Style Name="Default">
        <BrushLayer Name="Default" />
      </Style>
    </Styles>
  </Brush>
  <Brush Name="Quest.LeftPanel.Header">
    <Layers>
      <BrushLayer Name="Default" Sprite="Quest\questlist_header" ExtendBottom="17" ExtendLeft="0" ExtendRight="5" ExtendTop="0" />
    </Layers>
    <Styles>
      <Style Name="Default">
        <BrushLayer Name="Default" />
      </Style>
    </Styles>
  </Brush>

  <Brush Name="Quest.LeftPanel.Toggle">
    <Layers>
      <BrushLayer Name="Default" Sprite="Quest\quest_collapser_default" ExtendBottom="8" ExtendTop="3" SaturationFactor="20" HueFactor="-10"/>
    </Layers>
    <Styles>
      <Style Name="Default">
        <BrushLayer Name="Default"  />
      </Style>
      <Style Name="Hovered">
        <BrushLayer Name="Default" ColorFactor="1.2" />
      </Style>
      <Style Name="Selected">
        <BrushLayer Name="Default" ColorFactor="1.5" Color="#FFC349FF" />
      </Style>
      <Style Name="Pressed">
        <BrushLayer Name="Default" ColorFactor="0.9" />
      </Style>
    </Styles>
    <SoundProperties>
      <StateSounds>
      </StateSounds>
      <EventSounds>
        <EventSound EventName="Click" Audio="filter" />
      </EventSounds>
    </SoundProperties>
  </Brush>

  <Brush Name="Quest.LeftPanel.QuestButton.Active">
    <Layers>
      <BrushLayer Name="Default" Sprite="Quest\quest_screen_tuple_default" Color="#FFEBC1FF" HueFactor="-5" ColorFactor="1.1"/>
    </Layers>
    <Styles>
      <Style Name="Default">
        <BrushLayer Name="Default"  />
      </Style>
      <Style Name="Hovered">
        <BrushLayer Name="Default" ColorFactor="1.3"/>
      </Style>
      <Style Name="Selected">
        <BrushLayer Name="Default"  SaturationFactor="50"  ColorFactor="1.8" />
      </Style>
      <Style Name="Pressed">
        <BrushLayer Name="Default" ColorFactor="0.8"  />
      </Style>
    </Styles>
  </Brush>

  <Brush Name="Quest.LeftPanel.QuestButton.Active.MainStory">
    <Layers>
      <BrushLayer Name="Default" Sprite="Quest\quest_screen_tuple_default" Color="#FFEBC1FF" SaturationFactor="100" ColorFactor="1.1"/>
    </Layers>
    <Styles>
      <Style Name="Default">
        <BrushLayer Name="Default"  />
      </Style>
      <Style Name="Hovered">
        <BrushLayer Name="Default" ColorFactor="1.3"/>
      </Style>
      <Style Name="Selected">
        <BrushLayer Name="Default" ColorFactor="2" />
      </Style>
      <Style Name="Pressed">
        <BrushLayer Name="Default" ColorFactor="0.8"  />
      </Style>
    </Styles>
  </Brush>

  <Brush Name="StageTask.ProgressStone">
    <Layers>
      <BrushLayer Name="Default" Sprite="Quest\progress_stone" />
    </Layers>
