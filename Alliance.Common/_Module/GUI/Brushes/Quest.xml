  <Brush Name="StageTask.TwoWayProgress.Handle">
    <Layers>
      <BrushLayer Name="Default" Sprite="Quest\twoway_progress_bar_indicator" />
    </Layers>
    <Styles>
      <Style Name="Default">
        <BrushLayer Name="Default" />
      </Style>
    </Styles>
  </Brush>
  
  <Brush Name="Quest.Tuple.Notification">
    <Layers>
      <BrushLayer Name="Default" Sprite="tuple_notification_9" Color="#FCC537FF"/>
    </Layers>
    <Styles>
      <Style Name="Default">
        <BrushLayer Name="Default" />
      </Style>
      <Style Name="QuestNotification" AnimationToPlayOnBegin="QuestNotificationAnimation">
        <BrushLayer Name="Default" />
      </Style>
    </Styles>
    <Animations>
      <Animation Name="QuestNotificationAnimation" Duration="0.6" Loop="true">
        <AnimationProperty PropertyName="AlphaFactor">
          <KeyFrame Time="0.0" Value="0.0" />
          <KeyFrame Time="0.3" Value="0.5" />
          <KeyFrame Time="0.5" Value="1" />
          <KeyFrame Time="0.6" Value="1" />
        </AnimationProperty>
      </Animation>
    </Animations>
  </Brush>

  <Brush Name="Quest.Sorting.Dropdown.Center.Small">
    <Layers>
      <BrushLayer Name="Default" Sprite="SPGeneral\SPOptions\standart_dropdown_with_arrows_mid_small" ExtendTop="11" ExtendBottom="11" ExtendLeft="14" ExtendRight="14" IsHidden="true" />
      <BrushLayer Name="Hovered" Sprite="SPGeneral\SPOptions\standart_dropdown_with_arrows_mid_hover_small" ExtendTop="11" ExtendBottom="11" ExtendLeft="14" ExtendRight="14" IsHidden="true" />
    </Layers>
    <Styles>
      <Style Name="Default">
        <BrushLayer Name="Default" IsHidden="false" />
      </Style>
      <Style Name="Pressed">
        <BrushLayer Name="Hovered" ColorFactor="0.8" IsHidden="false" />
      </Style>
      <Style Name="Hovered">
        <BrushLayer Name="Hovered" IsHidden="false" />
      </Style>
      <Style Name="Disabled">
        <BrushLayer Name="Default" ColorFactor="0.6" IsHidden="false" AlphaFactor="0.8" />
      </Style>
    </Styles>
    <SoundProperties>
      <EventSounds>
        <EventSound EventName="Click" Audio="dropdown" />
      </EventSounds>
    </SoundProperties>
  </Brush>

  <Brush Name="Quest.Sorting.Dropdown.Extension.Small">
