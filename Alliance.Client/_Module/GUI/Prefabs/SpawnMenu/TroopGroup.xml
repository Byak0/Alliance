<Prefab>
	<Variables>
	</Variables>
	<VisualDefinitions>
	</VisualDefinitions>
	<Window>
		<!-- Troop group -->
		<Widget WidthSizePolicy="StretchToParent" HeightSizePolicy ="CoverChildren" HorizontalAlignment="Center" VerticalAlignment="Top" Brush="MPLobby.Matchmaking.Region.DropdownItem" MarginTop="10" >
			<Children>
				<!-- Group type name -->
				<TextWidget WidthSizePolicy="StretchToParent" HeightSizePolicy ="Fixed" SuggestedHeight="30" Brush="MPLobby.ClassFilter.ClassTuple.Text" MarginLeft="24" DoNotAcceptEvents="true" Text="@GroupName" />

				<!-- Troops of that type -->
				<ListPanel DataSource="{Troops}" WidthSizePolicy="StretchToParent" HeightSizePolicy="CoverChildren" MarginTop="30" MarginLeft="10" MarginRight="10" StackLayout.LayoutMethod="VerticalBottomToTop">
					<ItemTemplate>

						<!-- Troop button -->
						<Widget WidthSizePolicy="StretchToParent" HeightSizePolicy="Fixed" SuggestedHeight="44" >
							<Children>
								<ButtonWidget Id="TroopButton" WidthSizePolicy="Fixed" HeightSizePolicy ="Fixed" SuggestedWidth="394" SuggestedHeight="44" MarginLeft="24" DoNotPassEventsToChildren="true" UpdateChildrenStates="true" IsSelected="@IsSelected" Brush="MPLobby.ClassFilter.ClassTuple.Background" Command.Click="SelectTroop">
									<Children>
										<!-- Background color -->
										<Widget WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="15" SuggestedHeight="40" VerticalAlignment="Center" MarginLeft="5" PositionYOffset="-1" Sprite="MPLobby\Store\class_tuple_faction_color" AlphaFactor="0.7" />

										<!-- Troop icon -->
										<Widget WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="34" SuggestedHeight="34" VerticalAlignment="Center" MarginLeft="16" PositionYOffset="-1" Sprite="@TroopSprite" />

										<!-- Scrolling troop name -->
										<ScrollingTextWidget Text="@TroopName" WidthSizePolicy="Fixed" HeightSizePolicy="StretchToParent" SuggestedWidth="200" MarginLeft="60" PositionYOffset="-1" Brush="MPLobby.ClassFilter.ClassTuple.Text" ScrollOnHoverWidget="..\TroopButton" InbetweenScrollDuration="0.5" IsAutoScrolling="false" />

										<!-- Troop limit -->
										<TextWidget IsVisible="@UseTroopLimit" Text="@TroopLimit" WidthSizePolicy="CoverChildren" HeightSizePolicy="StretchToParent" HorizontalAlignment="Right" MarginRight="@TroopLimitMarginR" Brush="MPLobby.ClassFilter.ClassTuple.Text" />

										<!-- Troop cost -->
										<TextWidget IsVisible="@UseTroopCost" IntText="@TroopCost" WidthSizePolicy="CoverChildren" HeightSizePolicy="StretchToParent" HorizontalAlignment="Right" MarginRight="40" Brush="MPLobby.ClassFilter.ClassTuple.Text" />

										<!-- Gold icon -->
										<Widget IsVisible="@UseTroopCost" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="20" SuggestedHeight="18" HorizontalAlignment="Right" VerticalAlignment="Center" MarginRight="12" Sprite="General\Mission\PersonalKillfeed\bracelet_icon_shadow" />
									</Children>
								</ButtonWidget>
							</Children>
						</Widget>

					</ItemTemplate>
				</ListPanel>
			</Children>
		</Widget>
	</Window>
</Prefab>