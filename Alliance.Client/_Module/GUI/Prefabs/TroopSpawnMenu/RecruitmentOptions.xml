				<ScrollableButtonWidget WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedWidth="110" SuggestedHeight="50" HorizontalAlignment="Left" VerticalAlignment="Center" Brush="FaceGen.Extension.Button" MarginLeft="345" IntText="@CustomTroopCount" EditableText="true" NotifyParentForSelection="true" Command.Click="SelectCustom" />
